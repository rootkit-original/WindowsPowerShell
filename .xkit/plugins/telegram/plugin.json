{
  "name": "telegram",
  "version": "2.0.0",
  "description": "Plugin de integração com Telegram Bot",
  "main": "plugin.py",
  "class": "TelegramPlugin",
  "author": "XKit Team",
  "dependencies": {
    "requests": ">=2.25.0",
    "asyncio": "*"
  },
  "mcp_server": true,
  "mcp_tools": [
    "send-message",
    "send-project-report", 
    "send-system-status",
    "send-git-status",
    "send-help",
    "send-plugins-list",
    "send-file-content"
  ],
  "configuration": {
    "bot_token": {
      "type": "string",
      "required": true,
      "description": "Token do bot do Telegram"
    },
    "chat_id": {
      "type": "string", 
      "required": true,
      "description": "ID do chat para notificações"
    },
    "polling_enabled": {
      "type": "boolean",
      "default": true,
      "description": "Habilitar polling automático"
    }
  }
}